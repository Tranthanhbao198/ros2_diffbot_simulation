<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro" name="vehicle_blue">

  <!-- ================================================================ -->
  <!-- BƯỚC 1: TẢI TỆP CẤU HÌNH YAML VÀO MỘT BIẾN                      -->
  <!-- ================================================================ -->
  <xacro:property name="config" value="${xacro.load_yaml('../config/diffbot_params.yaml')}"/>

  <!-- ================================================================ -->
  <!-- BƯỚC 2: TẠO CÁC THUỘC TÍNH (PROPERTY) NGẮN GỌN TỪ BIẾN ĐÃ TẢI    -->
  <!-- ================================================================ -->
  <xacro:property name="wheel_radius" value="${config['robot_params']['ros__parameters']['wheel_radius']}"/>
  <xacro:property name="wheel_separation" value="${config['robot_params']['ros__parameters']['wheel_separation']}"/>
  <xacro:property name="max_linear_velocity" value="${config['robot_params']['ros__parameters']['max_linear_velocity']}"/>
  <xacro:property name="max_linear_acceleration" value="${config['robot_params']['ros__parameters']['max_linear_acceleration']}"/>
  <xacro:property name="max_linear_deceleration" value="${config['robot_params']['ros__parameters']['max_linear_deceleration']}"/>

  <!-- Các thuộc tính cố định -->
  <xacro:property name="PI" value="3.1415926535897931"/>
  <xacro:property name="chassis_mass" value="1.14395"/>
  <xacro:property name="wheel_mass" value="1"/>
  <xacro:property name="caster_mass" value="1"/>
  <xacro:property name="wheel_length" value="0.2"/>
  <xacro:property name="caster_radius" value="0.2"/>

  <!-- ================================================================ -->
  <!-- BƯỚC 3: XÂY DỰNG ROBOT SỬ DỤNG CÁC THUỘC TÍNH ĐÃ ĐỊNH NGHĨA      -->
  <!-- ================================================================ -->

  <!-- Liên kết cơ sở (Khung gầm) -->
  <link name="base_link">
    <inertial>
      <origin xyz="0.5 0 0.4" rpy="0 0 0"/>
      <mass value="${chassis_mass}"/>
      <inertia ixx="0.095329" ixy="0" ixz="0" iyy="0.381317" iyz="0" izz="0.476646"/>
    </inertial>
    <visual>
      <origin xyz="0.5 0 0.4" rpy="0 0 0"/>
      <geometry>
        <box size="2.0 1.0 0.5"/>
      </geometry>
      <material name="blue">
        <color rgba="0.0 0.0 1.0 1"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0.5 0 0.4" rpy="0 0 0"/>
      <geometry>
        <box size="2.0 1.0 0.5"/>
      </geometry>
    </collision>
  </link>

  <!-- Macro cho bánh xe để tránh lặp lại mã -->
  <xacro:macro name="wheel" params="prefix parent reflect">
    <link name="${prefix}_wheel_link">
      <inertial>
        <mass value="${wheel_mass}"/>
        <inertia ixx="0.043333" ixy="0" ixz="0" iyy="0.043333" iyz="0" izz="0.08"/>
      </inertial>
      <visual>
        <origin xyz="0 0 0" rpy="${PI/2} 0 0"/>
        <geometry>
          <cylinder radius="${wheel_radius}" length="${wheel_length}"/>
        </geometry>
        <material name="red">
          <color rgba="1.0 0.0 0.0 1"/>
        </material>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="${PI/2} 0 0"/>
        <geometry>
          <cylinder radius="${wheel_radius}" length="${wheel_length}"/>
        </geometry>
      </collision>
    </link>
    <joint name="${prefix}_wheel_joint" type="continuous">
      <parent link="${parent}"/>
      <child link="${prefix}_wheel_link"/>
      <origin xyz="-0.5 ${reflect * wheel_separation / 2} 0" rpy="0 0 0"/>
      <axis xyz="0 1 0"/>
    </joint>
  </xacro:macro>

  <xacro:wheel prefix="left" parent="base_link" reflect="1"/>
  <xacro:wheel prefix="right" parent="base_link" reflect="-1"/>

  <!-- Bánh xe phụ -->
  <link name="caster_link">
    <inertial>
      <mass value="${caster_mass}"/>
      <inertia ixx="0.016" ixy="0" ixz="0" iyy="0.016" iyz="0" izz="0.016"/>
    </inertial>
    <visual>
      <geometry>
        <sphere radius="${caster_radius}"/>
      </geometry>
      <material name="green">
        <color rgba="0.0 1.0 0.0 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <sphere radius="${caster_radius}"/>
      </geometry>
    </collision>
  </link>
  <joint name="caster_joint" type="fixed">
    <parent link="base_link"/>
    <child link="caster_link"/>
    <origin xyz="0.8 0 -0.2" rpy="0 0 0"/>
  </joint>

  <gazebo>
    <plugin
      filename="gz-sim-diff-drive-system"
      name="gz::sim::systems::DiffDrive">
      <left_joint>left_wheel_joint</left_joint>
      <right_joint>right_wheel_joint</right_joint>
      <wheel_separation>${wheel_separation}</wheel_separation>
      <wheel_radius>${wheel_radius}</wheel_radius>
      <topic>/cmd_vel</topic>
      
      <!-- Các thông số hiệu suất -->
      <max_linear_acceleration>${max_linear_acceleration}</max_linear_acceleration>
      <min_linear_acceleration>-${max_linear_deceleration}</min_linear_acceleration>
      <max_linear_velocity>${max_linear_velocity}</max_linear_velocity>

      <!--
        ================================================================
        BƯỚC SỬA LỖI: BẬT TÍNH NĂNG ODOMETRY
        ================================================================
      -->
      <!-- Tên chủ đề mà odometry sẽ được phát ra -->
      <odom_topic>/odom</odom_topic>
      <!-- Khung odometry (thường là 'odom') -->
      <odom_frame>odom</odom_frame>
      <!-- Khung cơ sở của robot (phải khớp với base_link) -->
      <robot_base_frame>base_link</robot_base_frame>
      <!-- Tần số phát odometry (Hz) -->
      <odom_publish_frequency>50</odom_publish_frequency>
    </plugin>
  </gazebo>

</robot>
